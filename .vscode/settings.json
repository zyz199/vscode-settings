{
  /*包管理设置*/
  "stylelint.packageManager": "pnpm",
  "npm.packageManager": "pnpm",
  /* cSpell:disable */

  /* Debug */
  "debug.onTaskErrors": "debugAnyway",

  /* Diff Editor */
  "diffEditor.codeLens": true,
  "diffEditor.ignoreTrimWhitespace": false,

  /* Editor */
  // Display
  "editor.fontFamily": "Input Mono, Fira Code, '微软雅黑', monospace",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "editor.fontSize": 14.5,
  "editor.rulers": [120],
  // Formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true,
    "source.organizeImports": false
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  // Others
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "on",
  "editor.linkedEditing": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.mouseWheelZoom": true,
  "editor.quickSuggestions": { "strings": true, "comments": true },
  "editor.renderWhitespace": "boundary",
  "editor.snippetSuggestions": "top",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "onlySnippets",
  "editor.tabSize": 2,
  "editor.unicodeHighlight.allowedLocales": { "zh-hans": true },
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          // "comment",
          "keyword",
          "storage.modifier",
          "storage.type.class.js",
          "storage.type.js"
        ],
        "settings": {
          "fontStyle": "italic bold"
        }
      },
      {
        "scope": ["keyword.control.conditional", "keyword.operator", "comment"],
        "settings": {
          "fontStyle": "bold"
        }
      }
    ]
  },

  /* Explorer */
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {},

  /* Extensions */
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,

  /* Files */
  "files.associations": {
    // "*.css": "css",
    "*.css": "tailwindcss",
    "*.mjs": "javascript",
    "*.mdx": "markdown",
    ".env.local": "properties",
    ".env.development.local": "properties",
    ".env.production": "properties",
    ".env.development": "properties",
    "manifest.json": "jsonc", // uniapp 可以添加注释
    "pages.json": "jsonc" // uniapp 可以添加注释
  },
  "files.autoGuessEncoding": true,
  "files.eol": "\n", // 文件换行模式：默认选择 LF
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,

  /* Git Config */
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.untrackedChanges": "separate",

  /* Search */
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  /* Security */
  "security.workspace.trust.untrustedFiles": "open",

  /* Terminal Config */
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.fontWeight": "300",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.enabled": true,

  /* Window */
  "window.commandCenter": true,
  "window.autoDetectColorScheme": true,
  "window.nativeTabs": true, // Only works on MacOS

  /* Workbench */
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Visual Studio Dark",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.preferredLightColorTheme": "Dracula Soft",
  "workbench.preferredDarkColorTheme": "Dracula",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editor.tabCloseButton": "left",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  "workbench.list.smoothScrolling": true,
  "workbench.sideBar.location": "left",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 10,

  /* ESLint */
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.packageManager": "pnpm",
  "eslint.quiet": true,
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "vue",
    "react"
    // "html",
    // "markdown",
    // "json",
    // "jsonc",
    // "json5"
  ],

  /* Prettier */
  "prettier.arrowParens": "always",
  "prettier.bracketSameLine": false,
  "prettier.bracketSpacing": true,
  "prettier.embeddedLanguageFormatting": "auto",
  "prettier.enable": true,
  "prettier.endOfLine": "lf",
  "prettier.htmlWhitespaceSensitivity": "css",
  "prettier.jsxSingleQuote": false,
  "prettier.printWidth": 120,
  "prettier.proseWrap": "preserve",
  "prettier.quoteProps": "as-needed",
  "prettier.semi": false,
  "prettier.singleAttributePerLine": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "none",
  "prettier.useTabs": false,
  "prettier.vueIndentScriptAndStyle": false,
  "prettier.documentSelectors": ["**/*.astro"],

  /* CSS */
  "css.lint.hexColorLength": "ignore",

  /* Typescript */
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "javascript.preferences.importModuleSpecifier": "project-relative",
  "typescript.suggest.jsdoc.generateReturns": false,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,

  /* Tailwind CSS */
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.classAttributes": ["class", "className", "ngClass", "class:list"],

  /* Inline Fold */
  "inlineFold.autoFold": false,

  /* Azure */
  "azure.cloud": "AzureChinaCloud",

  /* Material Icon Theme */
  "material-icon-theme.activeIconPack": "vue_vuex",
  "material-icon-theme.folders.color": "#42a5f5",
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.hidesExplorerArrows": false,
  "material-icon-theme.saturation": 1
}
